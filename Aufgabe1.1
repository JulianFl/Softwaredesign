            if (eingabe == "w")
            {
                double volumen = getCubeVolume(durchmesser);
                double oberflaeche = getCubeSurface(durchmesser);
                string strOberflaeche = "Ihre Oberfäche beträgt: " + oberflaeche;
                string strVolumen = "Ihr Volumen beträgt: " + volumen;

                Console.WriteLine(strOberflaeche + "   " + strVolumen);

            }
            else if (eingabe == "k")
            {

                double volumen = getKugelVolume(durchmesser);
                double oberflaeche = getKugelSurface(durchmesser);

                string strOberflaeche = "Ihre Oberfäche beträgt: " + oberflaeche;
                string strVolumen = "Ihr Volumen beträgt: " + volumen;

                Console.WriteLine(strOberflaeche + "  " + strVolumen);



        private static double getCubeVolume(double durchmesser)
        {
            double volumen = durchmesser * durchmesser * durchmesser;
            volumen = Math.Round(volumen, 2);

            return volumen;
        }

        private static double getCubeSurface(double durchmesser)
        {
            double oberflaeche = 6 * durchmesser * durchmesser;
            oberflaeche = Math.Round(oberflaeche, 2);

            return oberflaeche;
        }

        private static double getKugelVolume(double durchmesser)
        {
            double volumen = (Math.PI * durchmesser * durchmesser * durchmesser) / 6;
            volumen = Math.Round(volumen, 2);
            return volumen;
        }

        private static double getKugelSurface(double durchmesser)
        {
            double oberflaeche = Math.PI * durchmesser * durchmesser;
            oberflaeche = Math.Round(oberflaeche, 2);

            return oberflaeche;
        }

        private static double getOktaederVolume(double durchmesser)
        {
            double volumen = ((Math.Sqrt(2)) * durchmesser * durchmesser * durchmesser) / 3;
            volumen = Math.Round(volumen, 2);
            return volumen;
        }

        private static double getOktaederSurface(double durchmesser)
        {
            double oberflaeche = 2 * (Math.Sqrt(3)) * durchmesser * durchmesser;
            oberflaeche = Math.Round(oberflaeche, 2);
            return oberflaeche;
        }
    }
}




